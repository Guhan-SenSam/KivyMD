<KitchenSinkLabelForChips@MDLabel>
    theme_text_color: "Primary"


<KitchenSinkChips>
    name: "chips"

    BoxLayout:
        orientation: "vertical"

        Toolbar:
            id: toolbar

        ScrollView:
            pos_hint: {"center_x": .5}
            bar_width: 0

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                padding:'30dp'
                spacing:'30dp'

                MDLabel:
                    text:"Select Chips (Default)"
                    halign:'center'

                MDChipContainer:
                    spacing:'10dp'
                    pos_hint:{'center_x':.5}
                    size_hint:None,None
                    MDChip:
                        text:'Account'
                        icon:'account'
                    MDChip:
                        text:'People'
                        icon:'account-supervisor'
                    MDChip:
                        text:'Work'
                        icon:'account-hard-hat'

                MDSeparator:

                MDLabel:
                    text:"Select Multiple Chips"
                    halign:'center'

                MDChipContainer:
                    id:multiselect
                    spacing:'10dp'
                    pos_hint:{'center_x':.5}
                    size_hint:None,None
                    multiple:True
                    MDChip:
                        text:'Account'
                        icon:'account'
                    MDChip:
                        text:'People'
                        icon:'account-supervisor'
                    MDChip:
                        text:'Work'
                        icon:'account-hard-hat'

                MDSeparator:

                MDLabel:
                    text:"Select Chips with check marks,\nworks only in multiple select"
                    halign:'center'

                MDChipContainer:
                    spacing:'10dp'
                    pos_hint:{'center_x':.5}
                    size_hint:None,None
                    multiple:True
                    MDChip:
                        text:'Account'
                        icon:'account'
                        check:True
                    MDChip:
                        text:'People'
                        icon:'account-supervisor'
                        check:True
                    MDChip:
                        text:'Work'
                        icon:'account-hard-hat'
                        check:True

                MDSeparator:

                MDLabel:
                    text:"Action chips"
                    halign:'center'

                MDChipContainer:
                    spacing:'10dp'
                    pos_hint:{'center_x':.5}
                    size_hint:None,None
                    type:'action'
                    MDChip:
                        text:'Account'
                        icon:'account'
                        on_release:root.callback_for_menu_items(self)
                    MDChip:
                        text:'People'
                        icon:'account-supervisor'
                        on_release:root.callback_for_menu_items(self)
                    MDChip:
                        text:'Work'
                        icon:'account-hard-hat'
                        on_release:root.callback_for_menu_items(self)
