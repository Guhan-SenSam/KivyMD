<KitchenSinkLabelForChips@MDLabel>
    theme_text_color: "Primary"


<KitchenSinkChips>
    name: "chips"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        ScrollView:
            pos_hint: {"center_x": .5}
            bar_width: 0

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                padding:'20dp'
                spacing:'60dp'

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"

                    MDLabel:
                        text:"Select Chips (Default)"

                    MDChipContainer:
                        spacing:'10dp'
                        pos_hint:{'center_x':.5}
                        size_hint:None,None
                        MDChip:
                            text:'Account'
                            icon:'account'
                        MDChip:
                            text:'Account Supervisor'
                            icon:'account-supervisor'
                        MDChip:
                            text:'Account-hard-hat'
                            icon:'account-hard-hat'


                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"

                    MDLabel:
                        text:"Select Multiple Chips"

                    MDChipContainer:
                        id:multiselect
                        spacing:'10dp'
                        pos_hint:{'center_x':.5}
                        size_hint:None,None
                        multiple:True
                        MDChip:
                            text:'Account'
                            icon:'account'
                        MDChip:
                            text:'Account Supervisor'
                            icon:'account-supervisor'
                        MDChip:
                            text:'Account-hard-hat'
                            icon:'account-hard-hat'

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"

                    MDLabel:
                        text:"Select Chips with check marks, \n works only in multiple select"

                    MDChipContainer:
                        spacing:'10dp'
                        pos_hint:{'center_x':.5}
                        size_hint:None,None
                        multiple:True
                        MDChip:
                            text:'Account'
                            icon:'account'
                            check:True
                        MDChip:
                            text:'Account Supervisor'
                            icon:'account-supervisor'
                            check:True
                        MDChip:
                            text:'Account-hard-hat'
                            icon:'account-hard-hat'
                            check:True

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"

                    MDLabel:
                        text:"Action chips"

                    MDChipContainer:
                        spacing:'10dp'
                        pos_hint:{'center_x':.5}
                        size_hint:None,None
                        type:'action'
                        MDChip:
                            text:'Account'
                            icon:'account'
                            on_release:root.callback_for_menu_items(self)
                        MDChip:
                            text:'Account Supervisor'
                            icon:'account-supervisor'
                            on_release:root.callback_for_menu_items(self)
                        MDChip:
                            text:'Account-hard-hat'
                            icon:'account-hard-hat'
                            on_release:root.callback_for_menu_items(self)
